
@{
    Layout = null;
}
@model RegisterViewModel
<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Hemen Üye Olun.</title>
	<style>
		.text-danger {
			color: red;
		}
	</style>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	
		  
		  
		  
		  <script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}



	</script>
	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="/web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Bize Katılın</h5>
							<h3>Hemen Ücretsiz Üye Olun. </h3>
							<p>
								Birbirinden deneyimli rehberlerimiz eşliğinde İskandinav ülkelerinin soğuğunu,Akdeniz Ülkelerinin sıcaklığını, Güzel Ülkemizin Kapadokya'dan Sürmene Ölüdenizden Asos'a Balkan Turundan Mısır Çöllerine kadar aklınıza gelen heryere bir tık uzaktayız.
								Seyahatlerimize katılmak için hemen kayıt olun.
							</p>
							<a href="index.html" class="read-more-1 btn">Hadi Başlayalım</a>
						</div>

					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Join Us</h4>
						<p>Create Your Account, It's Free.</p>
					</div>
					<form method="post" class="signin-form">
                        <div class="text-danger" asp-validation-summary="All">

						</div>
						<div class="form-input">
							<label>Adınız</label>
							<input type="text" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Soyadınız</label>
							<input type="text"  asp-for="SurName" />
							<span asp-validation-for="SurName" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Kullanıcı Adı</label>
							<input type="text" asp-for="UserName" />
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Email</label>
							<input type="email" asp-for="Email" />
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Şifre</label>
							<input type="password"  asp-for="Password" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Şifre</label>
							<input type="password" asp-for="ConfirmPassword" />
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>

						<label class="container">
							Şartları Okudum <a href="#">Kabul Ediyorum</a> 
							<input type="checkbox">
							<span class="checkmark"></span>
						</label>
						<button class="btn">Hesap Oluştur</button>
					</form>
					<div class="copy-right text-center">
						<p>
							© @DateTime.Now.Year Invent Signup. All rights reserved | Design by Ozlem Anıs
					</div>
				</div>

			</div>

		</div>
	</section>
	<!-- //login-section -->
</body>

</html>