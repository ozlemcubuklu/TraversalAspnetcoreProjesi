@model ResetPasswordViewModel
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <h3>Şifre Yenileme Sayfası</h3>
    <div class="row">

        <form method="post">

            <label>Şifre Giriniz:</label>
            <input type="text" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <label>Şifreyi Tekrar Giriniz:</label>
            <input type="text" asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            <input type="submit" value="Şifreyi Güncelle" class="btn btn-outline-primary" />
        </form>
    </div>
</div>