 @if (User.Identity.IsAuthenticated)
{
    <div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir Yorum Bırakın..</h4>
    <p class="mb-4">
        İşaretli Alanarı Doldurmanız Gerekmektedir.
    </p>
    <form asp-action="AddComment" method="post" asp-controller="Comment">

        <div class="form-group">
            <textarea name="Content" class="form-control" placeholder="Yorumunuz" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <input type="hidden" name="AppUserId" class="form-control" value="@ViewBag.UserId"
                   required="">

            <input type="hidden" name="DestinationId" class="form-control" value="@ViewBag.i"
                       required="">
           

        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary" onClick="alert('Yorumunuz değerlendirildikten sonra onaylanacaktır.')">Gönder </button>
        </div>
    </form>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
      Yorum Yapabilmek İçin Lütfen Giriş Yapınız...
    </div>
}