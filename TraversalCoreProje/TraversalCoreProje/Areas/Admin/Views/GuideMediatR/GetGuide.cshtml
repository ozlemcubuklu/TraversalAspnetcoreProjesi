@model GetGuideByIdQueryResult
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayaut.cshtml";
}
<h4>Rehber Getir</h4>
<form method="post">


    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        @Html.Label("Ad Soyad")
        <input type="text" asp-for="Name" class="form-control">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        @Html.Label("Açıklama")
        <textarea asp-for="Description" cols="30" rows="5" class="form-control">
           </textarea>

        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    
    <input type="submit" class="btn btn-outline-primary" value="Yeni Rehber Ekle">
</form>

