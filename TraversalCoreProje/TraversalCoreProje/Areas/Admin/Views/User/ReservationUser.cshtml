@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayaut.cshtml";
    int sayac = 0;
}


<h3>Kullanıcının Geçmiş Rezervasyonları</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad-Soyad</th>
        <th>Rota</th>
        <th>Kişi Sayısı</th>
        <th>Tarih</th>
        <th>Detaylar</th>
      
    </tr>

    @foreach (var item in Model)
    {
        sayac++;
        <tr>
            <td>@sayac</td>
            <td>@item.AppUser.Name @item.AppUser.SurName</td>
            <td>@item.Destination.City</td>
            <td>@item.PersonCount</td>
            <td>@(((DateTime)item.ResevationDate).ToString("dd-MMM-yyyy"))</td>
            <td> <a href="/admin/user/DeleteUser/@item.Id" class="btn btn-outline-danger">Sil</a></td>
         
        </tr>

    }

</table>
