@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayaut.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>User</th>
        <th>Destination</th>
        <th>Comment Date</th>
        <th>Onayla</th>
        <th>Sil</th>
       
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.User</td>
            <td>@item.Destination.City</td>
            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
            <td>
                 @if (item.State)
                {
                   <span class="badge badge-success">onaylı</span> 
                }
                else{ <a href="/Admin/Comment/ApproveComment/@item.Id" class="btn btn-outline-info">Onayla</a>
                 <span class="badge badge-danger">onaylı değil </span>
                }
                
             
            </td>
            <td> <a href="/Admin/Comment/DeleteComment/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                </tr>

    }

</table>