@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayaut.cshtml";
}


<h3>Api Ziyaretçi Listesi</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Ülke</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>#</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td>@item.Country</td>

            <td> <a href="/admin/visitorapi/DeleteVisitor/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td> <a href="/admin/visitorapi/updateVisitor/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
        </tr>

    }

</table>
<a href="/admin/VisitorApi/AddVisitor" class="btn btn-outline-primary">Yeni Ziyaretçi Girişi</a>
