@model GetDestinationByIdQueryResult
@{
    ViewData["Title"] = "CreateDestination";
    Layout = "~/Views/Shared/_AdminLayaut.cshtml";
}


<h4> Tur Ekle CQRS</h4>
<form method="post">
    <input type="hidden" asp-for="Id" class="form-control">

    <div class="form-group">
        @Html.Label("Şehir")
        <input type="text" asp-for="City" class="form-control">
    </div>

    <div class="form-group">
        @Html.Label("Gün Gece")
        <input type="text" asp-for="DayNight" class="form-control">
    </div>

    <div class="form-group">
        @Html.Label("Fiyat")
        <input type="text" asp-for="Price" class="form-control">
    </div>



    <button class="btn btn-outline-primary">Yeni Tur Rotası</button>
</form>

