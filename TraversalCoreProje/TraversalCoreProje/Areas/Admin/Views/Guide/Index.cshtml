@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayaut.cshtml";
}

<style>
    img{
        border-radius:50%;
    }
</style>
<h3>Rehber Listesi</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.Image" alt="" width="50" height="50"/>
            </td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                @if (item.Status)
                {
                    <a href="/admin/guide/ChangeToStatus/@item.Id" class="btn btn-outline-warning">Pasif Yap</a>
                }
                else
                {
                    <a href="/admin/guide/ChangeToStatus/@item.Id" class="btn btn-outline-info">Aktif Yap</a>
                }

            </td>
            <td> <a href="/admin/guide/updateguide/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
            <td> <a href="/admin/guide/Deleteguide/@item.Id" class="btn btn-outline-danger">Sil</a></td>
           
        </tr>

    }

</table>
<a href="/admin/guide/addguide/" class="btn btn-outline-primary">Yeni Rehber Kaydı</a>