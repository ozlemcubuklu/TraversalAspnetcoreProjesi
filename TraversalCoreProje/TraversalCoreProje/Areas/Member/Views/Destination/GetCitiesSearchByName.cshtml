@using Entity
@model List<Destination>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_MemberLayout.cshtml";
}





<form method="get">

    <div>
        <p><b>Lütfen Aranacak Şehri Giriniz:</b>
			<input type="text" value="@ViewData["CurrentFilter"]" name="searchString" class="form-control" />
            <input type="submit" value="Şehir Ara" class="btn btn-outline-dark" /><br />
		</p>
    </div>

</form>

<table class="table">
	<thead>
		<tr>
			<th>#</th>
			<th>Şehir</th>
			<th>Süre</th>
			<th>Kapasite</th>
			<th>Fiyat</th>
			<th>Detaylar</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.City</td>
				<td>@item.DayNight</td>
				<td>@item.Capasity</td>
				<td>@item.Price ₺</td>
				<td> <a href="#" class="btn btn-outline-info">Detaylar</a></td>
			</tr>
		}
	</tbody>
</table>